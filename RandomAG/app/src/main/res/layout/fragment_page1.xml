<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".Page1">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_marginRight="15dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_content_copy_24"
        app:backgroundTint="#57CD37" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Min"
                android:textColor="#ADE46C"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_min"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_background"
                android:elevation="30dp"
                android:hint="Nhập min: "
                android:inputType="number"
                android:padding="13dp"
                android:textColor="#49E13E"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="Max"
                android:textColor="#ADE46C"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_max"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_background"
                android:elevation="30dp"
                android:hint="Nhập max: "
                android:inputType="number"
                android:padding="13dp"
                android:textColor="#49E13E"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/solan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="Số lần gieo:"
                android:textColor="#ADE46C"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_solangieo"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_background"
                android:elevation="30dp"
                android:hint="Nhập số lần gieo "
                android:inputType="number"
                android:padding="13dp"
                android:textColor="#4CAF50"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button1"

                android:layout_width="250dp"
                android:layout_height="50dp"

                android:background="@drawable/mau"
                android:elevation="50dp"
                android:text="TẠO" />


            <TextView
                android:id="@+id/kq1"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/kq"
                android:gravity="center"
                android:inputType="textMultiLine"

                android:text="0"
                android:textColor="#0FC82D"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>