<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page4">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:src="@drawable/ic" />

    <TextView
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random AG 1.1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:text="Tác giả: Nguyễn Dương Thế Vĩ " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:text="Liên hệ: nguyenduongthevi31415@gmail.com" />

    <TextView
        android:id="@+id/sourcecode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"

        android:textColor="#03A9F4"
        android:text="Source Code" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="24dp"

        android:textColor="#4CAF50"
        android:text="Cảm ơn bạn đã sử dụng app !" />
</LinearLayout>